<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#A5B6A5</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">#253334</item>
    </style>

    <style name="Onboarding" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">#A5B6A5</item>
        <item name="android:navigationBarColor">#253334</item>
    </style>

    <style name="RoundImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="all_text" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/alegreya_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hi_text" parent="all_text">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="other_text" parent="all_text">
        <item name="fontFamily">@font/alegreya_sans</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="btn_text" parent="other_text">
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Mood -->
    <style name="mood_text" parent="other_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Mood_RoundImage">
        <item name="cornerSize">25%</item>
    </style>


</resources>